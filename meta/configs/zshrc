plugins=(
    docker
    common-aliases
    emacs
    git
    git-extras
    github
    gnu-utils
    history-substring-search
    nvm
    python
    sudo
    zsh-autosuggestions
    zsh-completions
    zsh-syntax-highlighting
)
ZSH_THEME="fishy"
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=4'
zstyle ':omz:plugins:nvm' lazy yes

setopt histignorespace
bindkey -s "\C-r" "\C-a hstr -- \C-j"
source $ZSH/oh-my-zsh.sh

